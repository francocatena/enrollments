<h3>Enviar instrucciones de desbloqueo</h3>

<%= simple_form_for(resource, as: resource_name,
  url: unlock_path(resource_name), html: { method: :post }) do |f| %>

  <div class="form-inputs">
    <%= f.input :email, input_html: { autofocus: true } %>
  </div>

  <div class="form-actions">
    <%= f.submit 'Enviar instrucciones', class: 'btn btn-primary' %>
  </div>
<% end %>
