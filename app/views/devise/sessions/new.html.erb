<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="well">
      <%= simple_form_for(resource, as: resource_name,
        url: session_path(resource_name)) do |f| %>

        <div class="form-inputs">
          <%= f.input :email, input_html: { autofocus: true } %>
          <%= f.input :password %>
          <%= f.input :remember_me, as: :boolean, label: false,
            inline_label: true if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.submit t('sessions.new.log_in'), class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>

    <%= link_to(
      t('sessions.new.forgot_password'), new_password_path(resource_name)
    ) %>
  </div>
</div>
