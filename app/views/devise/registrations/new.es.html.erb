<div class="row">
  <div class="public_form_container span4 offset4">
    <h3>Registrarse</h3>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, input_html: { autofocus: true } %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>
      </div>

      <div class="form-actions">
        <%= render partial: 'shared/hidden_submit', locals: { f: f } %>
        <%= show_button_dropdown(
          link_to('Registrarse', '#', class: 'btn btn-primary submit'),
          devise_links_es
        ) %>
      </div>
    <% end %>
  </div>
</div>