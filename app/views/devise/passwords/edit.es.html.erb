<div class="row">
  <div class="well col-md-4 col-md-offset-4">
    <%= simple_form_for(
      resource, as: resource_name, url: password_path(resource_name),
      html: { method: :patch }) do |f| %>

      <div class="form-inputs">
        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.input :password, label: 'Nueva contraseña', input_html: { autofocus: true } %>
        <%= f.input :password_confirmation, label: 'Confirmar contraseña' %>
      </div>

      <div class="form-actions">
        <%= f.submit t('password_resets.edit.update'), class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
