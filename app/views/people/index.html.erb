<div class="row">
  <div class="col-md-2">
    <p><%= t 'view.enrollments.confirmed', count: 0 %></p>
  </div>
  <div class="col-md-2">
    <p>
      <%= t 'view.enrollments.with_notebook' %>
      <span class="label <%= color_chooser_for_notebook @with_notebook %>">
        <%= @with_notebook %>
      </span>
    </p>
  </div>
  <div class="col-md-2">
    <p>
      <%= t 'view.enrollments.without_notebook' %>
      <span class="label <%= color_chooser_for_notebook @without_notebook %>">
        <%= @without_notebook %>
      </span>
    </p>
  </div>
</div>

<hr />

<table class="table table-condensed">
  <thead>
    <tr>
      <th></th>
      <th><%= Person.human_attribute_name 'name' %></th>
      <th><%= Person.human_attribute_name 'lastname' %></th>
      <th><%= Person.human_attribute_name 'email' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @people %>
  </tbody>
</table>

<%= pagination_links @people %>
