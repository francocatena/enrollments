<table class="table">
  <thead>
    <tr>
      <th><%= Person.human_attribute_name('name') %></th>
      <th><%= Person.human_attribute_name('lastname') %></th>
      <th><%= Person.human_attribute_name('email') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
    <tr>
      <td><%= person.name %></td>
      <td><%= person.lastname %></td>
      <td><%= person.email %></td>
      <td><%= link_to t('label.show'), person %></td>
      <td><%= link_to t('label.edit'), edit_person_path(person) %></td>
      <td><%= link_to t('label.destroy'), person, method: :delete, data: { confirm: t('message.confirmation') } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
